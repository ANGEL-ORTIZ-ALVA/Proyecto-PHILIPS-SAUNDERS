@model waSysColegio.Models.DetalleCurso

@{
    ViewBag.Title = "EditarNota";
}

@section Styles {
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/bootstrap.min.js"></script>
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .form-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 30px;
            background-color: #f5f5f5;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

            .form-container h2 {
                text-align: center;
                margin-bottom: 30px;
            }

            .form-container .form-group {
                margin-bottom: 25px;
            }

            .form-container label {
                font-weight: bold;
                margin-bottom: 8px;
            }

            .form-container .btn-primary {
                display: block;
                width: 100%;
                margin-top: 20px;
            }

            .form-container .btn-secondary {
                display: block;
                width: 100%;
                margin-top: 10px;
            }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Editar Nota</h2>
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(m => m.ID_Estudiante)
            @Html.HiddenFor(m => m.ID_Curso)
            @Html.HiddenFor(m => m.ID_Evaluacion)
            @Html.HiddenFor(m => m.ID_Asistencia)
            @Html.HiddenFor(m => m.ID_Periodo)
            @Html.HiddenFor(m => m.Estado_Registro)

            <div class="form-group">
                <label>Estudiante: @Model.NombreEstudiante @Model.ApellidoEstudiante</label>
            </div>
            <div class="form-group">
                <label>Curso: @Model.NombreCurso</label>
            </div>
            <div class="form-group">
                <label>Evaluación: @Model.NombreEvaluacion</label>
            </div>
            <div class="form-group">
                <label>Asistencia: @Model.NombreAsistencia</label>
            </div>
            <div class="form-group">
                <label>Periodo: @Model.NombrePeriodo</label>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Nota, "Nota:")
                @Html.TextBoxFor(m => m.Nota, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Nota)
            </div>
            <button type="submit" class="btn btn-primary">Guardar cambios</button>
            @Html.ActionLink("Cancelar", "VerNotas", new { idEstudiante = Model.ID_Estudiante }, new { @class = "btn btn-secondary" })
        }
    </div>
</body>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

