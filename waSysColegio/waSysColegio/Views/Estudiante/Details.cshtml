@model waSysColegio.Estudiante

@{
    ViewBag.Title = "Details";
}
<link rel="stylesheet" href="~/Styles/Formulario.css" />
<link rel="icon" type="image/png" href="~/Resources/logo-school.png" />
<link rel="shortcut icon" type="image/x-icon" href="~/Resources/logo-school.png" />


<div class="details-container">
    <h2 class="details-title">Detalles del Apoderado y Estudiante</h2> <hr />
    <dl class="details-list">
        <dt>Nombre</dt>
        <dd>@Html.DisplayFor(model => model.Nombre)</dd>
        <dt>Apellido</dt>
        <dd>@Html.DisplayFor(model => model.Apellido)</dd>
        <dt>Fecha de Nacimiento</dt>
        <dd>@Html.DisplayFor(model => model.Fecha_Nacimiento)</dd>
        <dt>DNI</dt>
        <dd>@Html.DisplayFor(model => model.DNI)</dd>
        <dt>Direccion</dt>
        <dd>@Html.DisplayFor(model => model.Direccion)</dd>
        <dt>Estado de Registro</dt>
        <dd>@Html.DisplayFor(model => model.Estado_Registro)</dd>
        <dt>Genero</dt>
        <dd>@Html.DisplayFor(model => model.Genero.Nombre_Genero)</dd>
        <dt>Grado</dt>
        <dd>@Html.DisplayFor(model => model.Grado.Numero_Grado)</dd>
        <dt>Seccion</dt>
        <dd>@Html.DisplayFor(model => model.Seccion.Nombre_Seccion)</dd>
        <dt>Usuario</dt>
        <dd>@Html.DisplayFor(model => model.Usuario.Nombre_Usuario)</dd>
    </dl>
</div>
<div class="details-actions">
    @Html.ActionLink("Editar", "Edit", new { id = Model.ID_Estudiante }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-secondary" })
</div>
<style>
    /* Botones de acción */
    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 8px 16px;
        font-size: 16px;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
        border: none;
        padding: 8px 16px;
        font-size: 16px;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>
