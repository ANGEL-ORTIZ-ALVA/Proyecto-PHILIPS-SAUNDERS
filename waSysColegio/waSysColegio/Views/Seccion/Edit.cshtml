@model waSysColegio.Seccion

@{
    ViewBag.Title = "Edit";
}
@Html.Partial("_Head_Content")
<link rel="stylesheet" href="~/Styles/Formulario.css" />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-container">
        <h2 class="form-title">Editar Seccion "@Html.DisplayFor(model => model.Nombre_Seccion)"</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_Seccion)

    <div class="form-group">
        <label for="Nombre_Seccion" class="form-label">Nombre de Sección</label>
        @Html.EditorFor(model => model.Nombre_Seccion, new { htmlAttributes = new { @class = "form-control input" } })
        @Html.ValidationMessageFor(model => model.Nombre_Seccion, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label class="form-label">Aforo</label>
        @Html.EditorFor(model => model.Aforo, new { htmlAttributes = new { @class = "form-control input" } })
        @Html.ValidationMessageFor(model => model.Aforo, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label class="form-label">Estado Registro</label>
        @Html.DropDownListFor(model => model.Estado_Registro, new SelectList(new List<string> { "Registrado", "Eliminado" }), new { @class = "form-control input" })
        @Html.ValidationMessageFor(model => model.Estado_Registro, "", new { @class = "text-danger" })
    </div>

    <div class="form-group form-actions">
        <input type="submit" value="Guardar" class="btn btn-primary" />
        <a href="@Url.Action("/Index")" class="btn btn-secondary">Regresar</a>
    </div>
    </div>
}

