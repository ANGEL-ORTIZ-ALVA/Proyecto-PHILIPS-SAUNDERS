    .container-card {
        display: grid;
        grid-template-columns: repeat(3, 1fr); /* 3 columnas */
        gap: 15px; /* Espaciado entre elementos */
        max-width: 800px;
        margin: 0 auto;
    }

    .list {
        list-style-type: none;
        padding: 0;
        margin: 0;
        display: contents;
    }

        .list li {
            display: block;
        }

    .seccion {
        display: block;
        padding: 10px 15px;
        text-align: center;
        background-color: #f0f0f0;
        border: 1px solid #ddd;
        border-radius: 5px;
        text-decoration: none;
        color: #333;
        font-weight: bold;
    }

        .seccion:hover {
            background-color: #d9e7ff;
