@model IEnumerable<waSysColegio.Models.Seccion>
@{
    ViewBag.Title = "VerSecciones";
}

@Html.Partial("_Head_Content")
@Html.Partial("_Sidebar")

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<section class="home">
    <div class="text">
        <figure>
            <img src="../Resources/logo-school.png" width="50" height="50" />
        </figure>
        <h2>Colegio 'Philip P. Saunders'</h2>
    </div>
    <div class="text">
            <h2>Secciones:</h2>
            <p>Elija la sección que desea calificar:</p>
        <div class="container-card">
            <ul class="list">
                @foreach (var seccion in Model)
                {
                    <li>
                        <a class="seccion" href="@Url.Action("VerEstudiantes", "Seccion", new { idSeccion = seccion.ID_Seccion })">
                            @seccion.Nombre_Seccion
                        </a>
                    </li>
                }
            </ul>

        </div>
    </div>
</section>
