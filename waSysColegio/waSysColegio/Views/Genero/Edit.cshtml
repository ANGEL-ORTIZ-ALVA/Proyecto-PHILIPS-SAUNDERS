@model waSysColegio.Genero

@{
    ViewBag.Title = "Edit";
}


@Html.Partial("_Head_Content")
<link rel="stylesheet" href="~/Styles/Formulario.css" />
<link rel="icon" type="image/png" href="~/Resources/logo-school.png" />
<link rel="shortcut icon" type="image/x-icon" href="~/Resources/logo-school.png" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-container">
        <h2 class="form-title">Editar Apoderado Estudiante</h2> <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_Genero)

        <div class="form-group">
            <label class="form-label">Nombre del Genero</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre_Genero, new { htmlAttributes = new { @class = "form-control input" } })
                @Html.ValidationMessageFor(model => model.Nombre_Genero, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="form-label">Estado Registro</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Estado_Registro, new SelectList(new List<string> { "Registrado", "Eliminado" }), new { @class = "form-control input" })
                @Html.ValidationMessageFor(model => model.Estado_Registro, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group form-actions">
            <input type="submit" value="Guardar" class="btn btn-primary" />
            <a href="@Url.Action("/Index")" class="btn btn-secondary">Regresar</a>
        </div>
    </div>
}

