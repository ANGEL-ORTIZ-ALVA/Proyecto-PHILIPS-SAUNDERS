@model waSysColegio.Apoderado_Estudiante

@{
    ViewBag.Title = "Create";
}
@Html.Partial("_Head_Content")
<link rel="stylesheet" href="~/Styles/Formulario.css" />
<link rel="icon" type="image/png" href="~/Resources/logo-school.png" />
<link rel="shortcut icon" type="image/x-icon" href="~/Resources/logo-school.png" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-container">
        <h2 class="form-title">Asignar apoderado a estudiante</h2> <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label for="ID_Apoderado" class="form-label">Apoderado</label>
            @Html.DropDownList("ID_Apoderado", null, htmlAttributes: new { @class = "form-control select input" })
            @Html.ValidationMessageFor(model => model.ID_Apoderado, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="ID_Estudiante" class="form-label">Estudiante</label>
            @Html.DropDownList("ID_Estudiante", null, htmlAttributes: new { @class = "form-control select input" })
            @Html.ValidationMessageFor(model => model.ID_Estudiante, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="form-label">Parentesco</label>
            @Html.EditorFor(model => model.Parentesco, new { htmlAttributes = new { @class = "form-control input" } })
            @Html.ValidationMessageFor(model => model.Parentesco, "", new { @class = "text-danger" })
        </div>

        <div class="form-group" style="display:none">
            <label class="form-label">Estado Registro</label>
            @Html.EditorFor(model => model.Estado_Registro, new { htmlAttributes = new { @class = "form-control input" } })
            @Html.ValidationMessageFor(model => model.Estado_Registro, "", new { @class = "text-danger" })
        </div>

        <div class="form-group form-actions">
            <input type="submit" value="Registrar" class="btn btn-primary" />
            <a href="@Url.Action("/Index")" class="btn btn-secondary">Regresar</a>
        </div>
    </div>
}

