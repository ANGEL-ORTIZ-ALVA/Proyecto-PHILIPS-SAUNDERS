@model waSysColegio.Usuario

@{
    ViewBag.Title = "Details";
}

<div class="form-container">
    <h4>Detalles del usuario "@Html.DisplayFor(model => model.Nombre_Usuario)"</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Nombre de usuario</dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre_Usuario)
        </dd>

        <dt>Password</dt>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>

        <dt>Fecha de Creación</dt>

        <dd>
            @Html.DisplayFor(model => model.Fecha_Creacion)
        </dd>

        <dt>Último Acceso</dt>

        <dd>
            @Html.DisplayFor(model => model.Ultimo_Acceso)
        </dd>

        <dt>Estado del Registro</dt>

        <dd>
            @Html.DisplayFor(model => model.Estado_Registro)
        </dd>

        <dt>Estado del usuario</dt>

        <dd>
            @Html.DisplayFor(model => model.Estado_Usuario.Nombre_Estado_Usuario)
        </dd>

        <dt>Rol del usuario</dt>

        <dd>
            @Html.DisplayFor(model => model.Rol.Nombre_Rol)
        </dd>

    </dl>
    <div class="btn-group">
        @Html.ActionLink("Editar", "Edit", new { id = Model.ID_Usuario }, new { @class = "btn btn-edit" })
        @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-back" })
    </div>
</div>

<style>
    /* Estilos generales */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f1f1f1;
        margin: 0;
        padding: 0;
        color: #333;
    }

    /* Contenedor de los detalles del usuario */
    .form-container {
        max-width: 550px;
        margin: 40px auto;
        padding: 30px;
        background-color: #ededed;
        border-radius: 30px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    }

    h4 {
        font-size: 26px;
        font-weight: bold;
        color: #3b3b3b;
        text-align: center;
        margin-bottom: 20px;
    }

    hr {
        margin: 20px 0;
        border: 1px solid #ddd;
    }

    /* Estilo para el listado de detalles */
    dl.dl-horizontal {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

        dl.dl-horizontal dt {
            font-weight: bold;
            color: #555;
            font-size: 14px;
        }

        dl.dl-horizontal dd {
            margin: 0;
            padding: 6px 10px;
            background-color: #d9d9d9 !important;
            border-radius: 4px;
            font-size: 16px;
            color: #333;
        }

    /* Contenedor de botones */
    .btn-group {
        display: flex;
        justify-content: center;
        gap: 50px;
        margin-top: 20px;
    }

    /* Botón base */
    .btn {
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 15px;
        text-decoration: none;
        text-align: center;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Botón Editar */
    .btn-edit {
        background-color: #4CAF50;
        color: white;
        border: 1px solid #4CAF50;
    }

        .btn-edit:hover {
            background-color: #45a049;
            box-shadow: 0px 0px 15px 8px rgba(0, 128, 0, 0.5);
        }

    /* Botón Volver */
    .btn-back {
        background-color: #676767;
        color: white;
        border: 1px solid #676767;
    }

        .btn-back:hover {
            background-color: #676767;
            box-shadow: 0px 0px 15px 8px rgba(2, 2, 2, 0.5);
        }

    /* Fondo alternativo para los detalles */
    dl.dl-horizontal dd:nth-child(even) {
        background-color: #f1f1f1;
    }

    /* Estilo para los enlaces en la parte inferior */
    p a:first-child {
        margin-right: 15px;
    }
</style>

