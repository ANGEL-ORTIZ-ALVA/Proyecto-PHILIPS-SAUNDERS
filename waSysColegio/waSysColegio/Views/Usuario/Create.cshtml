@model waSysColegio.Usuario
@{
    ViewBag.Title = "Create";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-container">
        <h2 style="text-align: center; margin-bottom: 40px; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);">Registrar usuario</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form">
            <div class="form-group">
                <label>Nombre de usuario</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nombre_Usuario, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.Nombre_Usuario, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label>Password</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" , required = "required" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Remover el campo Estado_Registro del formulario ya que se asigna en el controlador -->

            <div class="form-group">
                <label>Estado del usuario</label>
                <div class="col-md-10">
                    @Html.DropDownList("ID_Estado_Usuario", null, "Seleccione un estado", new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.ID_Estado_Usuario, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label>Rol del usuario</label>
                <div class="col-md-10">
                    @Html.DropDownList("ID_Rol", null, "Seleccione un rol", new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.ID_Rol, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                    <input type="submit" value="Crear usuario" class="btn btn-primary" />
                    @Html.ActionLink("Cancelar", "/Index")
            </div>
        </div>
    </div>
}
<style>
    /* Estilos generales */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f1f1f1;
        margin: 0;
        padding: 0;
        color: #333;
    }

    /* Contenedor del formulario */
    .form-container {
        max-width: 450px;
        margin: 40px auto;
        padding: 30px;
        background-color: #ededed;
        border-radius: 30px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    }
    .form {
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
        align-content: center;
    }

    h2 {
        font-size: 28px;
        font-weight: bold;
        text-align: center;
        margin-bottom: 30px;
        color: #4CAF50;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    }

    /* Estilos de los grupos de formularios */
    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-size: 1rem;
            font-weight: 500;
            color: #555;
        }

        .form-group .col-md-10 {
            display: flex;
            flex-direction: column;
        }

        /* Estilo de los campos de entrada */
        .form-group .form-control {
            padding: 12px 18px;
            font-size: 15px;
            border-radius: 10px;
            border: 1px solid #ccc;
            transition: all 0.3s ease;
            background-color: #f9f9f9;
        }

            .form-group .form-control:focus {
                border-color: #4CAF50;
                outline: none;
                box-shadow: 0 0 8px rgba(76, 175, 80, 0.5);
            }

        /* Mensajes de validación */
        .form-group .text-danger {
            font-size: 12px;
            color: #f44336;
        }

    /* Estilos para el botón de submit */
    .btn-primary {
        background-color: #007bff;
        color: #fff;
        padding: 12px 20px;
        border: none;
        border-radius: 15px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* Enlace para cancelar */
    .form-group a {
        color: #888;
        font-size: 16px;
        text-decoration: none;
        margin-left: 10px;
