@model IEnumerable<waSysColegio.Personal>

@{
    ViewBag.Title = "Index";
}

@Html.Partial("_Head_Content")
@Html.Partial("_Sidebar")

<section class="home">
    <div class="text">
        <figure>
            <img src="../Resources/logo-school.png" width="50" height="50" />
        </figure>
        <h2>Colegio 'Philip P. Saunders'</h2>
    </div>
    <div class="text">
        <div class="form-container">
            <h4 class="form-title">Lista de Personal</h4>
            <div style="margin: 20px 0px;">
                <p>
                    @Html.ActionLink("Registrar nuevo Personal", "Create", null, new { @class = "btn btn-success" })
                </p>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Apellido)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Fecha_Nacimiento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DNI)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Correo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Telefono)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Direccion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Firma)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Sello)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Estado_Registro)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Genero.Nombre_Genero)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Grado.Numero_Grado)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Seccion.Nombre_Seccion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Tipo_Personal.Nombre_Tipo_Personal)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Usuario.Nombre_Usuario)
                            </th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Apellido)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Fecha_Nacimiento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DNI)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Correo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telefono)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Direccion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Firma)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sello)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Estado_Registro)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Genero.Nombre_Genero)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Grado.Numero_Grado)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Seccion.Nombre_Seccion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tipo_Personal.Nombre_Tipo_Personal)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Usuario.Nombre_Usuario)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID_Personal }, new { @class = "editar", style = "margin-right: 5px;" })
                                </td>
                                <td>
                                    
                                    @Html.ActionLink("Details", "Details", new { id = item.ID_Personal }, new { @class = "info", style = "margin-right: 5px;" })
                                    
                                </td>
                                <td>
                                   
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID_Personal }, new { @class = "borrar" })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
</section>




<style>
    .btn {
        text-decoration: none;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: 0.3s;
    }

    .btn-primary {
        background-color: #4CAF50;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #3e8e41;
        }

    .btn-info {
        background-color: #03A9F4;
        color: #fff;
    }

        .btn-info:hover {
            background-color: #0397d6;
        }

    .btn-danger {
        background-color: #F44336;
        color: #fff;
    }

        .btn-danger:hover {
            background-color: #cb362c;
        }
</style>

@Html.Partial("_Footer")
