@model waSysColegio.Periodo

@{
    ViewBag.Title = "Create";
}
@Html.Partial("_Head_Content")
<link rel="stylesheet" href="~/Styles/Formulario.css" />
<link rel="icon" type="image/png" href="~/Resources/logo-school.png" />
<link rel="shortcut icon" type="image/x-icon" href="~/Resources/logo-school.png" />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-container">
        <h2 class="form-title">Registrar Periodo</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="form-label">Nombre del periodo</label>
        @Html.EditorFor(model => model.Nombre_Periodo, new { htmlAttributes = new { @class = "form-control input" } })
        @Html.ValidationMessageFor(model => model.Nombre_Periodo, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label class="form-label">Descripcion</label>
        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control input" } })
        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
    </div>

    <div class="form-group" style="display:none;">
        <label class="form-label" >Estado registro</label>
        @Html.EditorFor(model => model.Estado_Registro, new { htmlAttributes = new { @class = "form-control input" } })
        @Html.ValidationMessageFor(model => model.Estado_Registro, "", new { @class = "text-danger" })
    </div>

    <div class="form-group form-actions">
        <input type="submit" value="Registrar" class="btn btn-primary" />
        <a href="@Url.Action("/Index")" class="btn btn-secondary">Regresar</a>
    </div>
    </div>
}
